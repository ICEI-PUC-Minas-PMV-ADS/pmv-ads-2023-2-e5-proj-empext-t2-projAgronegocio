{
    "openapi": "3.0.1",
    "info": {
      "title": "API de Usuários",
      "description": "Essa API tem como objetivo a criação de usuários",
      "termsOfService": "",
      "contact": {
        "email": "laislima.amarals@gmail.com"
      },
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:5000/api/usuarios",
        "description": "API de produção"
      }
    ],
    "paths": {
      "/register": {
        "post": {
          "summary": "Cadastrar um novo usuário",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "password": {
                      "type": "string",
                      "description": "Senha com no mínimo 5 caracteres"
                    }
                  },
                  "required": [
                    "name",
                    "email",
                    "password"
                  ]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Usuário registrado com sucesso"
            },
            "400": {
              "description": "Erro ao registrar o usuário"
            },
            "409": {
              "description": "Usuário já em uso"
            }
          }
        }
      },
      "/login": {
        "post": {
          "summary": "Realizar login de usuário",
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "description": "Email do usuário para login"
                    },
                    "password": {
                      "type": "string",
                      "description": "Senha com no mínimo 5 caracteres"
                    }
                  },
                  "required": [
                    "email",
                    "password"
                  ]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Usuário logado com sucesso",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "msg": {
                        "type": "string"
                      },
                      "token": {
                        "type": "string"
                      },
                      "user": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Erro ao realizar o login"
            },
            "401": {
              "description": "Dados inválidos"
            }
          }
        }
      },
      "/get-user": {
        "post": {
          "summary": "Obter dados do usuário logado",
          "security": [
            {
              "BearerAuth": []
            }
        ],
          "parameters": [
            {
              "name": "Authorization",
              "in": "header",
              "description": "Token JWT de autorização",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Usuário encontrado",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "object",
                    "properties": {
                      "error": {
                        "type": "boolean"
                      },
                      "data": {
                        "type": "object"
                      },
                      "message": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "422": {
              "description": "Token não fornecido"
            }
          }
        }
      }
    },
    "components": {
      "securitySchemes": {
        "BearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
        }
      }
    },
    "security": [
      {
        "BearerAuth": []
      }
    ]
  }
  